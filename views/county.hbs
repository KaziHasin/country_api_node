        function autocompleteMatch(input) {
            if (input == '') {
                return [];
            }
            if(input.length < 3) {
                return []; 
            }
            var reg = new RegExp(input.toLowerCase())
            return countryArr.filter(function(term) {

                let terms = term.toLowerCase();
                
                   if (terms.match(reg)) {
                    return terms;
              
                }
               
            });
        }

        function showCountry(val) {
            res = document.getElementById("auto_City");
            res.innerHTML = '';
            let list = '';
            let terms = autocompleteMatch(val);
            for (i = 0; i < terms.length; i++) {
                list += '<li>' + terms[i] + '</li>';
            }
            res.innerHTML = list;

            const searchLI = document.querySelectorAll("#auto_City li");

            searchLI.forEach((data) => {

                data.addEventListener("click", function() {

                    city_serch = document.getElementById("serch_input");

                    city_serch.value = this.innerHTML;

                    res.innerHTML = '';

                    let serachTerms = city_serch.value;
                    
                    const countryImage = document.querySelector(".country-image img");
                    const countryName = document.querySelector(".country-caption h2");
                    const capital = document.querySelector("#capital");
                    const population = document.querySelector("#population");
                     
                    fetch("/oneCountry",{
                    method:"POST",
                    headers: {'Content-Type': 'application/json'},
                    body: JSON.stringify({serachTerms})
                    }).then(res => res.text()).then(data =>{
            

                    let countryInfo = JSON.parse(data);       
                      
                      
